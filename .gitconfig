[user]
	email = matteo@ninux.org
	name = matteo [l0aCk3r]
[core]
	editor = vim
	pager = cat
[merge]
	tool = vimdiff
[color]
	ui = true
	status = true
[format]
	pretty = %C(cyan)%h %C(red)%d %C(green)%ad %C(yellow)'%s' %C(green)(%cr) %C(blue)<%an>
[log]
	date = short
	decorate = long
	abbrevCommit = true
[alias]
	glog = log --graph --all --pretty=oneline --decorate

[credential]
	helper = cache
[push]
	default = current
