# Window list at the bottom of the screen
# caption show the info on all tab region
# hardstatus string show the info on an xterm title
# hardstatus alwayslastline  show the info at the bottom of the screen 

#caption always "%n(%t) : %C"
caption splitonly "%{=b bW}%50> %{=b bW}Tab: %n Name: %{=b bW}%t %{-} %<"

#hardstatus on
#hardstatus alwayslastline
#hardstatus string '%{= kG}%-Lw%{= kW}%70> %n%f* %t%{= kG}%+Lw%< %{= kG}%-=%c:%s%{-}'
hardstatus alwayslastline "%{=b YR}%50> %{=b YR}%-w%{=b kR}[%n %t]%{-}%+w %< %>%=%{=B YR}[%u]%<"

